<div class="container">
  <div class="row">
    <div class="span8 offset2">
      <% if @results.empty? %>
        <h1 class="resultTitle">sorry we can't find anything for that movie.</h1>
        <%= link_to "Back To Search", root_path, :class => 'backButton' %>
       <% end %>
       
     <% @results.each do |a| %>
     <h1 class="resultTitle"><%= a["collectionName"] %></h3>
      <div class="thumbnail">
       <img src=<%= a["artworkUrl100"].gsub("100x100-75.jpg", "400x400-75.jpg") %>>
       <%= will_paginate @results, :previous_label => "&laquo; Prev", :next_label => "Next &raquo;", :inner_window => 1, :outer_window => 1, :renderer => BootstrapPagination::Rails %>
      </div>
      <%= link_to "Back To Search", root_path, :class => 'backButton' %>
     <% end %>
   </div>
 </div>
</div>
